<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="30dp"
    tools:context=".otpSentOption">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Select the sent"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/mocublack"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="below"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/mocublack"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="#C1EDF8"
            android:padding="10dp">

            <ImageView
                android:id="@+id/Mobile_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/phone"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>




            <TextView
                android:id="@+id/mobile_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textColor="@color/mocublack"
                android:text="Via SMS"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@id/Mobile_icon"
                />


            <TextView
                android:id="@+id/mobile_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+255747821258"
                android:layout_marginTop="30dp"
                android:textSize="25sp"
                android:textColor="@color/mocublack"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@id/Mobile_icon"
                android:layout_below="@id/mobile_tittle" />

            <Button
                android:id="@+id/mobileSending"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#37FFFFFF"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="#C1EDF8"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mail_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mail"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>




            <TextView
                android:id="@+id/mail_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textColor="@color/mocublack"
                android:text="Via Email"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@id/mail_icon"
                />


            <TextView
                android:id="@+id/mail_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="mocu@gmail.com"
                android:layout_marginTop="30dp"
                android:textSize="25sp"
                android:textColor="@color/mocublack"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@id/mail_icon"
                android:layout_below="@id/mail_tittle" />

            <Button
                android:id="@+id/emailSending"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#37FFFFFF"/>

        </RelativeLayout>



    </LinearLayout>

</ScrollView>