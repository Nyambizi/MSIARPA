<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".successPasswordChange">


    <ImageView
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:src="@drawable/arrow_left"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:layout_marginTop="-80dp"
            android:text="Password Updated"
            android:textAlignment="center"
            android:textColor="@color/mocublack"
            android:textSize="50sp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="103dp"
            android:src="@drawable/done" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Your Password is successfully Updated"
            android:textAlignment="center"
            android:textColor="@color/mocublack"
            android:textSize="20sp" />


        <RelativeLayout

            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:visibility="gone"
            android:background="@drawable/progressbackground"
            android:elevation="10dp">

            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/BackLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/mocublack"
            android:background="@color/mocublack"
            android:layout_marginTop="20dp"/>


    </LinearLayout>

</LinearLayout>